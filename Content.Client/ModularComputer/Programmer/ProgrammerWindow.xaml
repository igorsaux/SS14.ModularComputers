<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      Title="{Loc 'modular-computers-programmer-ui-window-title'}"
                      MinWidth="200"
                      MinHeight="200">
    <BoxContainer Orientation="Vertical" SeparationOverride="4" Margin="4 4 4 4" VerticalExpand="True" HorizontalExpand="True">
        <RichTextLabel HorizontalAlignment="Center" Name="StatusLabel" />
        
        <BoxContainer HorizontalAlignment="Center" VerticalExpand="True" HorizontalExpand="True" />
        
        <Button HorizontalAlignment="Center" Text="{Loc 'modular-computers-programmer-ui-upload-bootrom-button'}" Name="UploadBootromButton" />
        <RichTextLabel HorizontalAlignment="Center" Name="LimitsLabel" />
    </BoxContainer>
</controls:FancyWindow>